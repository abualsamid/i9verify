%tr{id: feed_item.id}
	%td
		= link_to gravatar_for(feed_item.user, size: 24), feed_item.user
		= link_to	 feed_item.user.name, feed_item.user 
		
	%td
		%span.timestamp.pull-right
			- if current_user?(feed_item.user)
				= "Posted #{time_ago_in_words(feed_item.created_at)} ago. "
				= link_to raw("&times;"), feed_item, method: :delete, data: {confirm: "Confirm Delete?"}, class: "close pt-close"
			- else
				= "Posted #{time_ago_in_words(feed_item.created_at)} ago. "
			
%tr 
	%td
		%span.content=wrap(feed_item.content)
%tr
	%td{colspan:99}
		%hr
