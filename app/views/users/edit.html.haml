- provide(:title,'Update Profile')
%h1 Update My Profile
.row
	.span6.offset3
		= form_for(@user) do |f|
			= render 'shared/error_messages'
			= f.label :name
			= f.text_field :name 
			= f.label :email
			= f.text_field :email
			= f.label :password
			= f.password_field :password 
			= f.label :password_confirmation, "Confirmation"
			= f.password_field :password_confirmation
			%br
			= f.submit "Update my profile", class: "btn btn-large btn-primary"	
		= gravatar_for @user 
		<a href="http://gravatar.com/emails" target=_new>change</a>

