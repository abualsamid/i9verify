%li
	=gravatar_for user , size: 52
	=link_to user.name, user
	=render partial: 'follow_form', locals: {user: user, btn_size: "btn-small"} if signed_in?
	- if current_user.admin? && !current_user?(user) 
		| 
		=link_to 'Delete', user, method: :delete, data: { confirm: "Are you sure you want to delete this user: #{user.name}?"}
