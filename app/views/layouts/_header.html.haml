.navbar.navbar-fixed-top
	.navbar-inner
		.container
			=link_to "Perfect Trax",root_path,id: "logo"
			%nav
				%ul.nav.pull-right
					%li= link_to "Home",root_path
					%li= link_to "Help",help_path
					- if signed_in?
						%li= link_to "Users",users_path
						%li.dropdown#fat-menu
							<a href='#' class=dropdown-toggle data-toggle="dropdown">Account <b class="caret"></b>
							%ul.dropdown-menu
								%li= link_to "#{current_user.name}'s Profile", current_user
								%li= link_to "Settings", edit_user_path(current_user)
								%li.divider
								%li= link_to "Sign Out #{current_user.name}", signout_path, method: "delete"
						%li= link_to "Sign Out #{current_user.name}", signout_path, method: "delete"
					- else
						%li= link_to "Sign In",signin_path
